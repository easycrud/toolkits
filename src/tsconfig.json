{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../lib/",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "references": [
    { "path": "../" }
  ],
}